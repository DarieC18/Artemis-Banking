@model ArtemisBanking.Application.ViewModels.UpdateLoanViewModel
@{
    ViewData["Title"] = "Editar Préstamo";
}

<section class="mb-4">
    <h1 class="display-5 fw-semibold text-primary">Editar Préstamo</h1>
</section>

<section class="card border-0 shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="Id" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="MontoCapital" class="form-label">Monto capital</label>
                    <input asp-for="MontoCapital" type="number" step="0.01" min="0.01" class="form-control" />
                    <span asp-validation-for="MontoCapital" class="text-danger"></span>
                    <small class="form-text text-muted">Dejar en blanco si no desea cambiar</small>
                </div>

                <div class="col-md-6">
                    <label asp-for="TasaInteres" class="form-label">Tasa de interés anual (%)</label>
                    <input asp-for="TasaInteres" type="number" step="0.01" min="0" max="100" class="form-control" />
                    <span asp-validation-for="TasaInteres" class="text-danger"></span>
                    <small class="form-text text-muted">Dejar en blanco si no desea cambiar</small>
                </div>

                <div class="col-md-6">
                    <label asp-for="PlazoMeses" class="form-label">Plazo (meses)</label>
                    <select asp-for="PlazoMeses" class="form-select">
                        <option value="">Seleccione un plazo</option>
                        @for (int i = 6; i <= 60; i += 6)
                        {
                            <option value="@i">@i meses</option>
                        }
                    </select>
                    <span asp-validation-for="PlazoMeses" class="text-danger"></span>
                    <small class="form-text text-muted">Solo múltiplos de 6 meses. Dejar en blanco si no desea cambiar</small>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

