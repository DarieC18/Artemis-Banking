@model List<ArtemisBanking.Application.ViewModels.AdminUserListItemViewModel>
@{
    ViewData["Title"] = "Gestión de Usuarios";
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var roleFilter = ViewBag.RoleFilter as string;
}

<section class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="display-5 fw-semibold text-primary">Gestión de Usuarios</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Usuario
        </a>
    </div>
</section>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<section class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3 align-items-end">
            @Html.AntiForgeryToken()
            <div class="col-md-4">
                <label for="roleFilter" class="form-label">Filtrar por rol:</label>
                <select name="roleFilter" id="roleFilter" class="form-select">
                    <option value="">Todos</option>
                    <option value="Administrador" selected="@(roleFilter == "Administrador")">Administrador</option>
                    <option value="Cajero" selected="@(roleFilter == "Cajero")">Cajero</option>
                    <option value="Cliente" selected="@(roleFilter == "Cliente")">Cliente</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100">Filtrar</button>
            </div>
        </form>
    </div>
</section>

<section class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Nombre de usuario</th>
                        <th>Cédula</th>
                        <th>Nombre completo</th>
                        <th>Correo electrónico</th>
                        <th>Tipo de usuario</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Cedula</td>
                                <td>@user.Nombre @user.Apellido</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-info">@user.Role</span>
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <form asp-action="ToggleStatus"
                                              method="post"
                                              asp-route-id="@user.Id"
                                              asp-route-activate="@(!user.IsActive)"
                                              style="display: inline;"
                                              onsubmit="return confirm('¿Está seguro que desea @(user.IsActive ? "inactivar" : "activar") este usuario?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-outline-warning" : "btn-outline-success")">
                                                @(user.IsActive ? "Inactivar" : "Activar")
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No se encontraron usuarios.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <nav aria-label="Navegación de páginas">
                <ul class="pagination justify-content-center">
                    @if (currentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-roleFilter="@roleFilter">Anterior</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Anterior</span>
                        </li>
                    }

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        if (i == currentPage)
                        {
                            <li class="page-item active">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-roleFilter="@roleFilter">@i</a>
                            </li>
                        }
                    }

                    @if (currentPage < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-roleFilter="@roleFilter">Siguiente</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Siguiente</span>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</section>


