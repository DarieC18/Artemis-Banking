@model ArtemisBanking.Application.ViewModels.UpdateAdminUserViewModel
@{
    ViewData["Title"] = "Editar Usuario";
    var isCliente = ViewBag.IsCliente as bool? ?? false;
}

<div class="ab-page-header">
    <h1 class="ab-page-title">
        <i class="fas fa-user-edit me-2"></i>
        Editar Usuario
    </h1>
    <p class="ab-page-subtitle">
        Actualiza la información del usuario
    </p>
</div>

<div class="ab-card">
    <form asp-action="Edit" method="post" data-loading>
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />

        <div asp-validation-summary="ModelOnly" class="ab-alert ab-alert-danger mb-4"></div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="ab-form-group">
                    <label asp-for="Nombre" class="ab-form-label">
                        <i class="fas fa-user me-1"></i>
                        Nombre <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Nombre" class="ab-form-control" placeholder="Ingrese el nombre" />
                    <span asp-validation-for="Nombre" class="ab-invalid-feedback"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="ab-form-group">
                    <label asp-for="Apellido" class="ab-form-label">
                        <i class="fas fa-user me-1"></i>
                        Apellido <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Apellido" class="ab-form-control" placeholder="Ingrese el apellido" />
                    <span asp-validation-for="Apellido" class="ab-invalid-feedback"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="ab-form-group">
                    <label asp-for="Cedula" class="ab-form-label">
                        <i class="fas fa-id-card me-1"></i>
                        Cédula <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Cedula" class="ab-form-control" placeholder="000-0000000-0" style="font-family: 'Courier New', monospace;" />
                    <span asp-validation-for="Cedula" class="ab-invalid-feedback"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="ab-form-group">
                    <label asp-for="Email" class="ab-form-label">
                        <i class="fas fa-envelope me-1"></i>
                        Correo Electrónico <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Email" type="email" class="ab-form-control" placeholder="usuario@ejemplo.com" />
                    <span asp-validation-for="Email" class="ab-invalid-feedback"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="ab-form-group">
                    <label asp-for="UserName" class="ab-form-label">
                        <i class="fas fa-at me-1"></i>
                        Usuario <span class="text-danger">*</span>
                    </label>
                    <input asp-for="UserName" class="ab-form-control" placeholder="nombre_usuario" />
                    <span asp-validation-for="UserName" class="ab-invalid-feedback"></span>
                </div>
            </div>

            @if (!isCliente)
            {
                <div class="col-md-6"></div>
            }

            <div class="col-md-6">
                <div class="ab-form-group">
                    <label asp-for="Password" class="ab-form-label">
                        <i class="fas fa-lock me-1"></i>
                        Nueva Contraseña
                    </label>
                    <input asp-for="Password" type="password" class="ab-form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="ab-invalid-feedback"></span>
                    <small class="text-white-50 mt-2 d-block">
                        <i class="fas fa-info-circle me-1"></i>
                        Dejar en blanco si no desea cambiar la contraseña
                    </small>
                </div>
            </div>

            <div class="col-md-6">
                <div class="ab-form-group">
                    <label asp-for="ConfirmPassword" class="ab-form-label">
                        <i class="fas fa-lock me-1"></i>
                        Confirmar Nueva Contraseña
                    </label>
                    <input asp-for="ConfirmPassword" type="password" class="ab-form-control" placeholder="••••••••" />
                    <span asp-validation-for="ConfirmPassword" class="ab-invalid-feedback"></span>
                </div>
            </div>

            @if (isCliente)
            {
                <div class="col-md-6">
                    <div class="ab-form-group">
                        <label asp-for="MontoAdicional" class="ab-form-label">
                            <i class="fas fa-plus-circle me-1"></i>
                            Monto Adicional
                        </label>
                        <input asp-for="MontoAdicional" type="number" step="0.01" min="0" class="ab-form-control" placeholder="0.00" data-money />
                        <span asp-validation-for="MontoAdicional" class="ab-invalid-feedback"></span>
                        <small class="text-white-50 mt-2 d-block">
                            <i class="fas fa-info-circle me-1"></i>
                            Este monto se sumará al balance actual de la cuenta principal
                        </small>
                    </div>
                </div>
            }
        </div>

        <div class="ab-alert ab-alert-warning mt-4">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Importante:</strong> Los cambios en la contraseña y el monto adicional se aplicarán inmediatamente.
        </div>

        <div class="ab-card-footer d-flex gap-3 mt-4">
            <button type="submit" class="ab-btn ab-btn-primary">
                <i class="fas fa-save me-2"></i>
                Guardar Cambios
            </button>
            <a asp-action="Index" class="ab-btn ab-btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i>
                Volver
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}