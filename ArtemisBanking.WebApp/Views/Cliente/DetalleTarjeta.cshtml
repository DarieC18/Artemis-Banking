@model ArtemisBanking.Application.ViewModels.Cliente.DetalleTarjetaViewModel

@{
    ViewData["Title"] = "Detalle de tarjeta de crédito";
}

<div class="ab-page-header">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="ab-page-title mb-2">
                <i class="fas fa-credit-card me-2"></i>
                Detalle de Tarjeta
            </h1>
            <p class="text-white-50 mb-0">
                <i class="fas fa-hashtag"></i>
                •••• •••• •••• <span style="font-family: 'Courier New', monospace; color: #00BFA5;">@Model.Ultimos4Digitos</span>
            </p>
        </div>
        <a asp-action="Index" class="ab-btn ab-btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>
            Volver
        </a>
    </div>
</div>

<div class="ab-credit-card-visual mb-4">
    <div class="ab-credit-card-chip"></div>
    <div class="ab-credit-card-number">
        •••• •••• •••• @Model.Ultimos4Digitos
    </div>
    <div class="ab-credit-card-info">
        <div>
            <small style="opacity: 0.8;">Válida hasta</small>
            <div class="fw-bold">@Model.FechaExpiracion</div>
        </div>
        <div class="text-end">
            <small style="opacity: 0.8;">Desde</small>
            <div class="fw-bold">@Model.FechaCreacion.ToString("MM/yy")</div>
        </div>
    </div>
</div>

<div class="ab-stats-grid mb-4">
    <div class="ab-stat-card primary">
        <div class="ab-stat-header">
            <div class="ab-stat-icon">
                <i class="fas fa-chart-line"></i>
            </div>
        </div>
        <div class="ab-stat-label">Límite de Crédito</div>
        <div class="ab-stat-value">@Model.LimiteCredito.ToString("C")</div>
    </div>

    <div class="ab-stat-card danger">
        <div class="ab-stat-header">
            <div class="ab-stat-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
        </div>
        <div class="ab-stat-label">Deuda Actual</div>
        <div class="ab-stat-value">@Model.DeudaActual.ToString("C")</div>
    </div>

    <div class="ab-stat-card success">
        <div class="ab-stat-header">
            <div class="ab-stat-icon">
                <i class="fas fa-check-circle"></i>
            </div>
        </div>
        <div class="ab-stat-label">Crédito Disponible</div>
        <div class="ab-stat-value">@Model.CreditoDisponible.ToString("C")</div>
    </div>
</div>

<div class="ab-card mb-4" style="background: linear-gradient(135deg, rgba(244, 180, 0, 0.1) 0%, rgba(220, 53, 69, 0.1) 100%);">
    <div class="mb-3">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="text-white">
                <i class="fas fa-chart-pie me-2"></i>
                Uso del Crédito
            </span>
            <span class="fw-bold" style="color: #F4B400;">
                @{
                    var porcentajeUsado = Model.LimiteCredito > 0
                    ? (Model.DeudaActual / Model.LimiteCredito * 100)
                    : 0;
                }
                @porcentajeUsado.ToString("F1")%
            </span>
        </div>
        <div class="ab-progress">
            <div class="ab-progress-bar" style="width: @porcentajeUsado%"></div>
        </div>
    </div>
</div>

<div class="ab-card">
    <div class="ab-card-header">
        <h2 class="ab-card-title">
            <i class="fas fa-shopping-cart me-2"></i>
            Historial de Consumos
        </h2>
    </div>

    <div class="ab-card-body">
        @if (Model.Consumos.Any())
        {
            <div class="table-responsive">
                <table class="ab-table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-calendar me-1"></i> Fecha</th>
                            <th class="text-end"><i class="fas fa-dollar-sign me-1"></i> Monto</th>
                            <th><i class="fas fa-store me-1"></i> Comercio</th>
                            <th class="text-center"><i class="fas fa-info-circle me-1"></i> Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.Consumos)
                        {
                            var esAvance = c.Comercio?.ToUpper() == "AVANCE";

                            <tr>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span>@c.FechaConsumo.ToString("dd/MM/yyyy")</span>
                                        <small class="text-white-50">@c.FechaConsumo.ToString("HH:mm")</small>
                                    </div>
                                </td>
                                <td class="text-end fw-bold text-danger">
                                    -@c.Monto.ToString("C")
                                </td>
                                <td>
                                    @if (esAvance)
                                    {
                                        <span class="ab-badge ab-badge-warning">
                                            <i class="fas fa-money-bill-wave me-1"></i>
                                            AVANCE DE EFECTIVO
                                        </span>
                                    }
                                    else
                                    {
                                        <i class="fas fa-store me-2"></i>
                                        <span>@c.Comercio</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @{
                                        var estadoClass = c.Estado?.Trim().ToUpper() switch
                                        {
                                            "APROBADO" => "ab-badge-success",
                                            "RECHAZADO" => "ab-badge-danger",
                                            _ => "ab-badge-info"
                                        };
                                        var estadoIcon = c.Estado?.Trim().ToUpper() switch
                                        {
                                            "APROBADO" => "fa-check-circle",
                                            "RECHAZADO" => "fa-times-circle",
                                            _ => "fa-info-circle"
                                        };
                                    }
                                    <span class="ab-badge @estadoClass">
                                        <i class="fas @estadoIcon me-1"></i>
                                        @c.Estado
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="ab-empty-state">
                <div class="ab-empty-state-icon">
                    <i class="fas fa-shopping-basket"></i>
                </div>
                <h3 class="ab-empty-state-title">No hay consumos</h3>
                <p class="ab-empty-state-text">
                    No se han registrado consumos para esta tarjeta.
                </p>
            </div>
        }
    </div>
</div>