@model ArtemisBanking.Application.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<section class="mb-4">
    <h1 class="display-5 fw-semibold text-primary">Panel del Administrador</h1>
    <p class="lead text-muted">Monitorea la actividad general del banco y las métricas operativas clave.</p>
</section>

<section class="mb-5">
    <h4 class="fw-semibold text-secondary mb-3">Actividad de Transacciones</h4>

    <div class="row g-4">
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Transacciones Totales</h6>
                    <h2 class="card-title">@Model.TotalTransactions.ToString("N0")</h2>
                    <p class="text-muted small">Acumuladas desde el inicio</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Transacciones Hoy</h6>
                    <h2 class="card-title">@Model.TodayTransactions.ToString("N0")</h2>
                    <p class="text-muted small">Movimientos en el día actual</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Pagos Procesados Hoy</h6>
                    <h2 class="card-title">@Model.TodayPayments.ToString("N0")</h2>
                    <p class="text-muted small">Pagos exitosos registrados</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Total Pagos Históricos</h6>
                    <h2 class="card-title">@Model.TotalPayments.ToString("N0")</h2>
                    <p class="text-muted small">Incluye pagos desde apertura</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="mb-5">
    <h4 class="fw-semibold text-secondary mb-3">Estado de Clientes</h4>

    <div class="row g-4">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Clientes Activos</h6>
                    <h2 class="card-title">@Model.ActiveClients.ToString("N0")</h2>
                    <p class="text-muted small">Usuarios con acceso vigente</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Clientes Inactivos</h6>
                    <h2 class="card-title">@Model.InactiveClients.ToString("N0")</h2>
                    <p class="text-muted small">Pendientes de activación</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Productos Financieros Totales</h6>
                    <h2 class="card-title">@Model.TotalProducts.ToString("N0")</h2>
                    <p class="text-muted small">Cuentas + Préstamos + Tarjetas</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="mb-5">
    <h4 class="fw-semibold text-secondary mb-3">Productos Activos</h4>

    <div class="row g-4">
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Préstamos Vigentes</h6>
                    <h2 class="card-title">@Model.ActiveLoans.ToString("N0")</h2>
                    <p class="text-muted small">Préstamos actualmente activos</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Tarjetas Activas</h6>
                    <h2 class="card-title">@Model.ActiveCreditCards.ToString("N0")</h2>
                    <p class="text-muted small">Tarjetas de crédito habilitadas</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Cuentas de Ahorro Abiertas</h6>
                    <h2 class="card-title">@Model.OpenSavingsAccounts.ToString("N0")</h2>
                    <p class="text-muted small">Cuentas principales y secundarias</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="mb-5">
    <h4 class="fw-semibold text-secondary mb-3">Indicadores Financieros</h4>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h6 class="card-subtitle text-muted">Monto Promedio de Deuda por Cliente</h6>
            <h2 class="card-title">RD$ @Model.AverageDebtPerClient.ToString("N2")</h2>
            <p class="text-muted small">Deuda total dividida entre clientes activos</p>
        </div>
    </div>
</section>
