@model List<ArtemisBanking.Application.ViewModels.ClientForSavingsAccountViewModel>
@{
    ViewData["Title"] = "Asignar cuenta - Paso 1";
    var cedulaFilter = ViewBag.CedulaFilter as string;
}

<section class="mb-4">
    <h1 class="display-6 fw-semibold text-primary">Paso 1 · Seleccionar cliente</h1>
    <p class="text-muted mb-0">Elige un cliente activo para asignarle una nueva cuenta secundaria.</p>
</section>

<section class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="AssignStep1" method="get" class="row g-3 align-items-end">
            <div class="col-md-8">
                <label for="cedulaFilter" class="form-label">Buscar por cédula</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" id="cedulaFilter" name="cedulaFilter" value="@cedulaFilter" placeholder="001-1234567-8" />
                </div>
            </div>
            <div class="col-md-4 d-grid">
                <button type="submit" class="btn btn-outline-primary">Buscar</button>
            </div>
        </form>
    </div>
</section>

<section class="card border-0 shadow-sm">
    <div class="card-body">
        <form asp-action="AssignStep1" method="post">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th></th>
                            <th>Cédula</th>
                            <th>Cliente</th>
                            <th>Correo electrónico</th>
                            <th>Deuda total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var cliente in Model)
                            {
                                <tr>
                                    <td>
                                        <input class="form-check-input" type="radio" name="userId" value="@cliente.UserId" />
                                    </td>
                                    <td>@cliente.Cedula</td>
                                    <td>@cliente.Nombre @cliente.Apellido</td>
                                    <td>@cliente.Email</td>
                                    <td>RD$ @cliente.DeudaTotal.ToString("N2")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">No hay clientes que coincidan con la búsqueda.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3 mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary w-100 w-md-auto">
                    <i class="bi bi-arrow-left"></i> Volver atrás
                </a>
                <button type="submit" class="btn btn-primary w-100 w-md-auto">
                    Siguiente paso <i class="bi bi-arrow-right"></i>
                </button>
            </div>
        </form>
    </div>
</section>

