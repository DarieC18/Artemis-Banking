@model List<ArtemisBanking.Application.ViewModels.SavingsAccountListItemViewModel>
@{
    ViewData["Title"] = "Gestión de cuentas de ahorro";
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var estadoFilter = ViewBag.EstadoFilter as string ?? "ACTIVAS";
    var tipoFilter = ViewBag.TipoFilter as string ?? "TODAS";
    var cedulaFilter = ViewBag.CedulaFilter as string;
}

<section class="mb-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
        <div>
            <h1 class="display-5 fw-semibold text-primary mb-0">Cuentas de ahorro</h1>
            <p class="text-muted mb-0">Administra cuentas principales y secundarias del sistema.</p>
        </div>
        <a asp-action="AssignStep1" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Asignar cuenta de ahorro
        </a>
    </div>
</section>

@if (TempData["SuccessMessage"] is string successMessage)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] is string errorMessage)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<section class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="cedulaFilter" class="form-label">Buscar por cédula</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" id="cedulaFilter" name="cedulaFilter" value="@cedulaFilter" placeholder="001-1234567-8" />
                </div>
            </div>
            <div class="col-md-3">
                <label for="estadoFilter" class="form-label">Estado</label>
                <select class="form-select" id="estadoFilter" name="estadoFilter">
                    <option value="TODAS" selected="@(estadoFilter == "TODAS")">Todas</option>
                    <option value="ACTIVAS" selected="@(estadoFilter == "ACTIVAS")">Activas</option>
                    <option value="CANCELADAS" selected="@(estadoFilter == "CANCELADAS")">Canceladas</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="tipoFilter" class="form-label">Tipo</label>
                <select class="form-select" id="tipoFilter" name="tipoFilter">
                    <option value="TODAS" selected="@(tipoFilter == "TODAS")">Todas</option>
                    <option value="PRINCIPAL" selected="@(tipoFilter == "PRINCIPAL")">Principal</option>
                    <option value="SECUNDARIA" selected="@(tipoFilter == "SECUNDARIA")">Secundaria</option>
                </select>
            </div>
            <div class="col-md-2 d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-outline-primary w-100">Filtrar</button>
            </div>
        </form>
    </div>
</section>

<section class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Número</th>
                        <th>Cliente</th>
                        <th>Cédula</th>
                        <th>Balance</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var cuenta in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@cuenta.NumeroCuenta</td>
                                <td>@cuenta.ClienteNombre @cuenta.ClienteApellido</td>
                                <td>@cuenta.ClienteCedula</td>
                                <td>RD$ @cuenta.Balance.ToString("N2")</td>
                                <td>
                                    <span class="badge @(cuenta.TipoCuenta == "PRINCIPAL" ? "bg-primary" : "bg-secondary")">
                                        @cuenta.TipoCuenta
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(cuenta.Estado == "ACTIVA" ? "bg-success" : "bg-danger")">
                                        @cuenta.Estado
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex gap-2 justify-content-center">
                                        <a asp-action="Detail" asp-route-id="@cuenta.Id" class="btn btn-outline-info btn-sm">
                                            <i class="bi bi-eye"></i> Ver detalles
                                        </a>
                                        @if (cuenta.Estado == "ACTIVA" && !cuenta.EsPrincipal)
                                        {
                                            <a asp-action="Cancel" asp-route-id="@cuenta.Id" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-x-circle"></i> Cancelar
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">No se encontraron cuentas con los filtros actuales.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <nav aria-label="Navegación de páginas">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-estadoFilter="@estadoFilter" asp-route-tipoFilter="@tipoFilter" asp-route-cedulaFilter="@cedulaFilter">Anterior</a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-estadoFilter="@estadoFilter" asp-route-tipoFilter="@tipoFilter" asp-route-cedulaFilter="@cedulaFilter">@i</a>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-estadoFilter="@estadoFilter" asp-route-tipoFilter="@tipoFilter" asp-route-cedulaFilter="@cedulaFilter">Siguiente</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</section>

