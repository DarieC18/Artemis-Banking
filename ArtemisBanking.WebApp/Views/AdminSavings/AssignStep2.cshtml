@model ArtemisBanking.Application.ViewModels.AssignSavingsAccountViewModel
@{
    ViewData["Title"] = "Asignar cuenta - Paso 2";
    var client = ViewBag.Client as ArtemisBanking.Application.ViewModels.ClientForSavingsAccountViewModel;
}

<div class="ab-page-header">
    <div class="mb-4">
        <h1 class="ab-page-title mb-2">
            <i class="fas fa-cog me-2"></i>
            Paso 2 · Configurar cuenta secundaria
        </h1>
        <p class="ab-page-subtitle mb-0">
            Define los datos iniciales de la cuenta para @($"{client?.Nombre} {client?.Apellido}")
        </p>
    </div>
</div>

<div class="ab-card">
    <div class="ab-card-header">
        <h2 class="ab-card-title">
            <i class="fas fa-user-check me-2"></i>
            Cliente seleccionado
        </h2>
    </div>
    <div class="ab-card-body">
        <div class="mb-4 p-3" style="background-color: rgba(255, 255, 255, 0.05); border-radius: var(--ab-border-radius); border: 1px solid rgba(255, 255, 255, 0.1);">
            <div class="row g-3">
                <div class="col-md-4">
                    <small style="color: rgba(255, 255, 255, 0.6); display: block; margin-bottom: 0.25rem;">
                        <i class="fas fa-user me-1"></i> Nombre
                    </small>
                    <strong style="color: var(--ab-white);">@client?.Nombre @client?.Apellido</strong>
                </div>
                <div class="col-md-4">
                    <small style="color: rgba(255, 255, 255, 0.6); display: block; margin-bottom: 0.25rem;">
                        <i class="fas fa-id-card me-1"></i> Cédula
                    </small>
                    <strong style="color: var(--ab-white); font-family: 'Courier New', monospace;">@client?.Cedula</strong>
                </div>
                <div class="col-md-4">
                    <small style="color: rgba(255, 255, 255, 0.6); display: block; margin-bottom: 0.25rem;">
                        <i class="fas fa-envelope me-1"></i> Email
                    </small>
                    <strong style="color: var(--ab-white);">@client?.Email</strong>
                </div>
            </div>
        </div>

        <form asp-action="AssignStep2" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserId" />

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="ab-alert ab-alert-danger mb-4">
                    <div class="d-flex align-items-start gap-2">
                        <i class="fas fa-exclamation-circle" style="margin-top: 0.125rem;"></i>
                        <div>
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }

            <div class="ab-form-group">
                <label asp-for="BalanceInicial" class="ab-form-label">
                    <i class="fas fa-dollar-sign me-1"></i>
                    @Html.DisplayNameFor(m => m.BalanceInicial)
                </label>
                <div class="input-group">
                    <span class="input-group-text" style="background-color: rgba(15, 23, 42, 0.95); border-color: rgba(148, 163, 184, 0.35); color: #F9FAFB;">
                        RD$
                    </span>
                    <input asp-for="BalanceInicial" class="ab-form-control" type="number" step="0.01" min="0" value="@(Model.BalanceInicial)" placeholder="0.00" />
                </div>
                <small class="form-text" style="color: rgba(255, 255, 255, 0.6); display: block; margin-top: 0.5rem;">
                    <i class="fas fa-info-circle me-1"></i>
                    El balance inicial puede ser cero (0). Si no ingresa un valor, se usará 0.
                </small>
                <span asp-validation-for="BalanceInicial" class="ab-invalid-feedback"></span>
            </div>

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3 mt-4">
                <a asp-action="AssignStep1" class="ab-btn ab-btn-outline-primary w-100 w-md-auto">
                    <i class="fas fa-arrow-left me-2"></i>
                    Volver atrás
                </a>
                <button type="submit" class="ab-btn ab-btn-primary w-100 w-md-auto">
                    <i class="fas fa-check-circle me-2"></i>
                    Asignar cuenta
                </button>
            </div>
        </form>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />