@model ArtemisBanking.Application.ViewModels.Cliente.PayCreditCardViewModel

@{
    ViewData["Title"] = "Pago de Tarjeta de Crédito";
}

<h2 class="mb-4">Pago de tarjeta de crédito</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="PagarTarjeta" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="CreditCardId" class="form-label"></label>
        <select asp-for="CreditCardId" class="form-select">
            <option value="">-- Seleccione una tarjeta --</option>
            @foreach (var card in Model.TarjetasDisponibles)
            {
                <option value="@card.Id">@card.NumeroTarjeta</option>
            }
        </select>
        <span asp-validation-for="CreditCardId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CuentaOrigen" class="form-label"></label>
        <select asp-for="CuentaOrigen" class="form-select">
            <option value="">-- Seleccione una cuenta --</option>
            @foreach (var acc in Model.CuentasDisponibles)
            {
                <option value="@acc.NumeroCuenta">@acc.NumeroCuenta</option>
            }
        </select>
        <span asp-validation-for="CuentaOrigen" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Monto" class="form-label"></label>
        <input asp-for="Monto" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Pagar</button>
    <a asp-controller="Cliente" asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
