@model ArtemisBanking.Application.ViewModels.Cliente.PayCreditCardViewModel

@{
    ViewData["Title"] = "Pago de Tarjeta de Crédito";
}

<!-- Título -->
<h2 class="ab-section-title">
    <i class="fas fa-credit-card"></i>
    Pago de tarjeta de crédito
</h2>

<!-- Mensajes -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="ab-alert ab-alert-danger" data-auto-dismiss="5000">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="ab-alert ab-alert-success" data-auto-dismiss="5000">
        @TempData["SuccessMessage"]
    </div>
}

<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

<!-- Card contenedor -->
<div class="ab-card ab-shadow">
    <form asp-action="PagarTarjeta" method="post" class="needs-validation" novalidate>

        @Html.AntiForgeryToken()

        <!-- Tarjeta -->
        <div class="ab-form-group">
            <label asp-for="CreditCardId" class="ab-form-label"></label>
            <select asp-for="CreditCardId" class="ab-form-control">
                <option value="">-- Seleccione una tarjeta --</option>
                @foreach (var card in Model.TarjetasDisponibles)
                {
                    <option value="@card.Id">@card.NumeroTarjeta</option>
                }
            </select>
            <span asp-validation-for="CreditCardId" class="ab-invalid-feedback"></span>
        </div>

        <!-- Cuenta origen -->
        <div class="ab-form-group">
            <label asp-for="CuentaOrigen" class="ab-form-label"></label>
            <select asp-for="CuentaOrigen" class="ab-form-control">
                <option value="">-- Seleccione una cuenta --</option>
                @foreach (var acc in Model.CuentasDisponibles)
                {
                    <option value="@acc.NumeroCuenta">@acc.NumeroCuenta</option>
                }
            </select>
            <span asp-validation-for="CuentaOrigen" class="ab-invalid-feedback"></span>
        </div>

        <!-- Monto -->
        <div class="ab-form-group">
            <label asp-for="Monto" class="ab-form-label"></label>
            <input asp-for="Monto" class="ab-form-control" type="number" step="0.01" data-money />
            <span asp-validation-for="Monto" class="ab-invalid-feedback"></span>
        </div>

        <!-- Botones -->
        <div class="mt-4">
            <button class="ab-btn ab-btn-primary ab-btn-lg" type="submit">
                <i class="fas fa-credit-card me-2"></i>
                Pagar Tarjeta
            </button>

            <a asp-controller="Cliente" asp-action="Index"
               class="ab-btn ab-btn-secondary ab-btn-lg ms-2">
                <i class="fas fa-times-circle me-2"></i>
                Cancelar
            </a>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
