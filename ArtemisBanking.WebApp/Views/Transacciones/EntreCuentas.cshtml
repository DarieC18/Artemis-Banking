@model ArtemisBanking.Application.ViewModels.TransferBetweenAccountsViewModel

@{
    ViewData["Title"] = "Transferencia entre cuentas";
}

<h2 class="mb-4">Transferencia entre cuentas propias</h2>

<form asp-action="EntreCuentas" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Cuenta origen -->
    <div class="mb-3">
        <label asp-for="CuentaOrigen" class="form-label"></label>
        <select asp-for="CuentaOrigen" class="form-select">
            <option value="">-- Seleccione una cuenta de origen --</option>
            @if (Model.CuentasDisponibles != null)
            {
                foreach (var cuenta in Model.CuentasDisponibles)
                {
                    <option value="@cuenta.NumeroCuenta">
                        @cuenta.NumeroCuenta
                    </option>
                }
            }
        </select>
        <span asp-validation-for="CuentaOrigen" class="text-danger"></span>
    </div>

    <!-- Cuenta destino -->
    <div class="mb-3">
        <label asp-for="CuentaDestino" class="form-label"></label>
        <select asp-for="CuentaDestino" class="form-select">
            <option value="">-- Seleccione una cuenta de destino --</option>
            @if (Model.CuentasDisponibles != null)
            {
                foreach (var cuenta in Model.CuentasDisponibles)
                {
                    <option value="@cuenta.NumeroCuenta">
                        @cuenta.NumeroCuenta
                    </option>
                }
            }
        </select>
        <span asp-validation-for="CuentaDestino" class="text-danger"></span>
    </div>

    <!-- Monto -->
    <div class="mb-3">
        <label asp-for="Monto" class="form-label"></label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Transferir
    </button>
    <a asp-controller="Cliente" asp-action="Index" class="btn btn-secondary ms-2">
        Cancelar
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
