@using ArtemisBanking.Application.ViewModels.Cliente
@model TransactionExpressViewModel

@{
    ViewData["Title"] = "Transferencia express";
}

<h2 class="mb-4">Transferencia express</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Express" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="CuentaOrigen" class="form-label"></label>
        <select asp-for="CuentaOrigen" class="form-select">
            <option value="">-- Seleccione una cuenta --</option>
            @if (Model.CuentasDisponibles != null)
            {
                foreach (var cuenta in Model.CuentasDisponibles)
                {
                    <option value="@cuenta.NumeroCuenta">
                        @cuenta.NumeroCuenta
                    </option>
                }
            }
        </select>
        <span asp-validation-for="CuentaOrigen" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CuentaDestino" class="form-label"></label>
        <input asp-for="CuentaDestino" class="form-control" />
        <span asp-validation-for="CuentaDestino" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Monto" class="form-label"></label>
        <input asp-for="Monto" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        The Realizar transferencia
    </button>

    <a asp-controller="Cliente" asp-action="Index" class="btn btn-secondary ms-2">
        Cancelar
    </a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
