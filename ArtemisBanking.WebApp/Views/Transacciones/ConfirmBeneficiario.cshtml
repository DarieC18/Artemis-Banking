@model ArtemisBanking.Application.ViewModels.Cliente.ConfirmTransactionBeneficiaryViewModel

@{
    ViewData["Title"] = "Confirmar transferencia a beneficiario";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<h2 class="mb-4">Confirmar transferencia a beneficiario</h2>

<div class="alert alert-info">

    <p><strong>Beneficiario:</strong> @Model.BeneficiaryNombre</p>

    <p><strong>Cuenta beneficiario:</strong> @Model.NumeroCuentaBeneficiario</p>

    <p><strong>Cuenta origen:</strong> @Model.CuentaOrigen</p>

    <p><strong>Monto a transferir:</strong> @Model.Monto.ToString("C")</p>
</div>

<p>¿Desea confirmar esta transferencia al beneficiario?</p>

<form asp-action="ConfirmBeneficiario" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="BeneficiaryId" />
    <input type="hidden" asp-for="BeneficiaryNombre" />
    <input type="hidden" asp-for="NumeroCuentaBeneficiario" />
    <input type="hidden" asp-for="CuentaOrigen" />
    <input type="hidden" asp-for="Monto" />

    <button type="submit" class="btn btn-success">Confirmar</button>
    <a asp-action="Beneficiario" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
