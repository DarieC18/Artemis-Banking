@model ArtemisBanking.Application.ViewModels.Cajero.PagoPrestamoFormViewModel

@{
    ViewData["Title"] = "Pago de Préstamo";
}

<div class="container mt-4">
    <h2 class="mb-4">Pago de Préstamo</h2>

    @if (!string.IsNullOrWhiteSpace(Model?.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form asp-action="PagoPrestamo" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="CuentaOrigen" class="form-label fw-bold">Cuenta Origen</label>
            <input asp-for="CuentaOrigen" class="form-control" placeholder="Ej: 2024000101" />
            <span asp-validation-for="CuentaOrigen" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LoanId" class="form-label fw-bold">ID del Préstamo</label>
            <input asp-for="LoanId" class="form-control" placeholder="Ej: 17" />
            <span asp-validation-for="LoanId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Monto" class="form-label fw-bold">Monto a Pagar</label>
            <input asp-for="Monto" class="form-control" placeholder="Ej: 3500" />
            <span asp-validation-for="Monto" class="text-danger"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <button type="submit" class="btn btn-primary">Continuar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
