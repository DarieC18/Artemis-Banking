@model ArtemisBanking.Application.ViewModels.Cajero.RetiroConfirmViewModel

@{
    ViewData["Title"] = "Confirmar retiro";
}

<h2 class="mb-4">Confirmar retiro</h2>

<div class="alert alert-warning">
    <p><strong>Cuenta origen:</strong> @Model.AccountMasked (@Model.AccountNumber)</p>
    <p><strong>Titular:</strong> @Model.HolderFullName</p>
    <p><strong>Monto a retirar:</strong> @Model.Amount.ToString("C")</p>
    <p><strong>Balance actual:</strong> @Model.CurrentBalance.ToString("C")</p>
</div>

<p>¿Desea confirmar este retiro?</p>

<form asp-action="ConfirmarRetiro" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="AccountNumber" />
    <input type="hidden" asp-for="Amount" />

    <button type="submit" class="btn btn-success">Confirmar</button>
    <a asp-action="Retiro" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
