@model ArtemisBanking.Application.ViewModels.Cajero.DepositoFormViewModel

@{
    ViewData["Title"] = "Depósito en cuenta";
}

<div class="ab-page-header">
    <div class="mb-4">
        <h1 class="ab-page-title mb-2">
            <i class="fas fa-arrow-down me-2"></i>
            Depósito en cuenta de ahorro
        </h1>
        <p class="ab-page-subtitle mb-0">
            Ingrese los datos de la cuenta y el monto a depositar
        </p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="ab-card">
            <div class="ab-card-header">
                <h2 class="ab-card-title">
                    <i class="fas fa-file-invoice-dollar me-2"></i>
                    Datos del depósito
                </h2>
            </div>

            <div class="ab-card-body">
                <form asp-action="Deposito" method="post">
                    @Html.AntiForgeryToken()

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="ab-alert ab-alert-danger mb-4">
                            <div class="d-flex align-items-start gap-2">
                                <i class="fas fa-exclamation-circle" style="margin-top: 0.125rem;"></i>
                                <div asp-validation-summary="ModelOnly"></div>
                            </div>
                        </div>
                    }

                    <div class="ab-form-group">
                        <label asp-for="AccountNumber" class="ab-form-label">
                            <i class="fas fa-hashtag me-1"></i>
                            @Html.DisplayNameFor(m => m.AccountNumber)
                        </label>
                        <input asp-for="AccountNumber"
                               class="ab-form-control"
                               placeholder="Ingrese el número de cuenta"
                               style="font-family: 'Courier New', monospace;"
                               autofocus />
                        <span asp-validation-for="AccountNumber" class="ab-invalid-feedback"></span>
                        <small class="form-text" style="color: rgba(255, 255, 255, 0.6); display: block; margin-top: 0.5rem;">
                            <i class="fas fa-info-circle me-1"></i>
                            Ingrese el número de cuenta de ahorros del cliente
                        </small>
                    </div>

                    <div class="ab-form-group">
                        <label asp-for="Amount" class="ab-form-label">
                            <i class="fas fa-dollar-sign me-1"></i>
                            @Html.DisplayNameFor(m => m.Amount)
                        </label>
                        <div class="input-group">
                            <span class="input-group-text" style="background-color: rgba(15, 23, 42, 0.95); border-color: rgba(148, 163, 184, 0.35); color: #F9FAFB;">
                                RD$
                            </span>
                            <input asp-for="Amount"
                                   class="ab-form-control"
                                   type="number"
                                   step="0.01"
                                   min="0.01"
                                   placeholder="0.00" />
                        </div>
                        <span asp-validation-for="Amount" class="ab-invalid-feedback"></span>
                        <small class="form-text" style="color: rgba(255, 255, 255, 0.6); display: block; margin-top: 0.5rem;">
                            <i class="fas fa-info-circle me-1"></i>
                            Ingrese el monto a depositar (debe ser mayor a 0)
                        </small>
                    </div>

                    <div class="ab-alert ab-alert-info">
                        <div class="d-flex align-items-start gap-2">
                            <i class="fas fa-lightbulb" style="margin-top: 0.125rem;"></i>
                            <div>
                                <strong style="display: block; margin-bottom: 0.5rem;">Información importante</strong>
                                <ul class="mb-0" style="padding-left: 1.25rem;">
                                    <li class="mb-2">Verifique que el número de cuenta sea correcto</li>
                                    <li class="mb-2">El monto será acreditado inmediatamente</li>
                                    <li>Esta operación quedará registrada en el sistema</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3 mt-4">
                        <a asp-action="Index" class="ab-btn ab-btn-outline-primary w-100 w-md-auto">
                            <i class="fas fa-times me-2"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="ab-btn ab-btn-primary w-100 w-md-auto">
                            <i class="fas fa-arrow-right me-2"></i>
                            Continuar
                        </button>
                    </div>
                </form>
            </div>
        </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}