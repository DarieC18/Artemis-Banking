@model ArtemisBanking.Application.ViewModels.Cajero.DepositoConfirmViewModel

@{
    ViewData["Title"] = "Confirmar depósito";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<h2 class="mb-4">Confirmar depósito</h2>

<div class="alert alert-info">
    <p><strong>Cuenta destino:</strong> @Model.AccountNumber</p>
    <p><strong>Titular:</strong> @Model.HolderFullName</p>
    <p><strong>Monto a depositar:</strong> @Model.Amount.ToString("C")</p>
</div>

<p>¿Desea confirmar este depósito?</p>

<form asp-action="ConfirmarDeposito" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="AccountNumber" />
    <input type="hidden" asp-for="Amount" />

    <button type="submit" class="btn btn-success">Confirmar</button>
    <a asp-action="Deposito" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
