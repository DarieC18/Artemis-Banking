@model ArtemisBanking.Application.ViewModels.Cajero.PagoTarjetaFormViewModel

@{
    ViewData["Title"] = "Pago de tarjeta de crédito";
}

<h2>Pago de tarjeta de crédito</h2>

<hr />

<form asp-action="PagoTarjeta" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="CuentaOrigen" class="form-label"></label>
        <input asp-for="CuentaOrigen" class="form-control" />
        <span asp-validation-for="CuentaOrigen" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CreditCardId" class="form-label"></label>
        <input asp-for="CreditCardId" class="form-control" />
        <span asp-validation-for="CreditCardId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Monto" class="form-label"></label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }

    <button type="submit" class="btn btn-primary">Continuar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
