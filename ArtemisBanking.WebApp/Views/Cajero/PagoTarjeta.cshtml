@model ArtemisBanking.Application.ViewModels.Cajero.PagoTarjetaFormViewModel

@{
    ViewData["Title"] = "Pago de tarjeta de crédito";
}

<h2>Pago de tarjeta de crédito</h2>

<hr />

<form asp-action="PagoTarjeta" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Número de cuenta origen</label>
        <input asp-for="CuentaOrigen" class="form-control" placeholder="Ingrese la cuenta origen" />
        <span asp-validation-for="CuentaOrigen" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Número de la tarjeta de crédito</label>
        <input asp-for="CardNumber" class="form-control" maxlength="16" minlength="16" placeholder="Ingrese los 16 dígitos" />
        <span asp-validation-for="CardNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Monto a pagar</label>
        <input asp-for="Monto" class="form-control" type="number" min="1" step="0.01" placeholder="Ingrese el monto" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }

    <button type="submit" class="btn btn-primary">Continuar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
