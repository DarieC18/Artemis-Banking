@model ArtemisBanking.Application.ViewModels.Cajero.RetiroFormViewModel

@{
    ViewData["Title"] = "Retiro de cuenta";
}

<h2 class="mb-4">Retiro de cuenta de ahorro</h2>

<form asp-action="Retiro" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="AccountNumber" class="form-label"></label>
        <input asp-for="AccountNumber" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Continuar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
