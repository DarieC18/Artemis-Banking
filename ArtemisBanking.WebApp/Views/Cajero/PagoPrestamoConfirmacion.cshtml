@model ArtemisBanking.Application.ViewModels.Cajero.PagoPrestamoConfirmViewModel

@{
    ViewData["Title"] = "Confirmación de Pago de Préstamo";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="container mt-4">

    <h2 class="mb-4">Confirmar Pago de Préstamo</h2>

    @if (!string.IsNullOrWhiteSpace(Model?.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Cuenta Origen</dt>
                <dd class="col-sm-8">
                    <small class="text-muted">(@Model.CuentaOrigen)</small>
                </dd>

                <dt class="col-sm-4">Número de Préstamo</dt>
                <dd class="col-sm-8">@Model.NumeroPrestamo</dd>

                <dt class="col-sm-4">Titular del Préstamo</dt>
                <dd class="col-sm-8">@Model.TitularPrestamo</dd>

                <dt class="col-sm-4">Monto a Aplicar</dt>
                <dd class="col-sm-8 fw-bold">@Model.MontoSolicitado.ToString("C")</dd>
            </dl>
        </div>
    </div>

    <h4>Cuotas que se cubrirán</h4>

    @if (Model.CuotasAfectadas != null && Model.CuotasAfectadas.Any())
    {
        <table class="table table-striped table-sm mt-3">
            <thead>
                <tr>
                    <th># Cuota</th>
                    <th>Valor</th>
                    <th>Fecha</th>
                    <th>¿Atrasada?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cuota in Model.CuotasAfectadas)
                {
                    <tr>
                        <td>@cuota.NumeroCuota</td>
                        <td>@cuota.ValorCuota.ToString("C")</td>
                        <td>@cuota.FechaPago.ToShortDateString()</td>
                        <td>@(cuota.Atrasada ? "Sí" : "No")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            No se encontró ninguna cuota que pueda ser afectada con este monto.
        </div>
    }

    <form asp-action="ConfirmarPagoPrestamo" method="post" class="mt-4">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="CuentaOrigen" />
        <input type="hidden" asp-for="LoanId" />
        <input type="hidden" asp-for="MontoSolicitado" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <button type="submit" class="btn btn-success">Confirmar Pago</button>
        <a asp-action="PagoPrestamo" class="btn btn-secondary ms-2">Volver</a>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
