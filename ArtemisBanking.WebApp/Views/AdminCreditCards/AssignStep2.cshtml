@model ArtemisBanking.Application.ViewModels.AssignCreditCardViewModel
@{
    ViewData["Title"] = "Asignar Tarjeta de Crédito - Paso 2";
    var client = ViewBag.Client as ArtemisBanking.Application.ViewModels.ClientForCreditCardViewModel;
}

<section class="mb-4">
    <h1 class="display-5 fw-semibold text-primary">Asignar Tarjeta de Crédito - Paso 2: Configuración</h1>
    <p class="lead text-muted">Configure los parámetros de la tarjeta de crédito.</p>
</section>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<section class="card border-0 shadow-sm">
    <div class="card-body">
        <form method="post" asp-action="AssignStep2">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserId" />

            <div class="mb-4">
                <h5 class="text-primary">Asignar tarjeta a: <strong>@client?.Nombre @client?.Apellido</strong></h5>
            </div>

            <div class="mb-3">
                <label asp-for="LimiteCredito" class="form-label">Límite de crédito:</label>
                <div class="input-group">
                    <input asp-for="LimiteCredito" class="form-control" type="number" step="0.01" min="0.01" required />
                    <span class="input-group-text">RD$</span>
                </div>
                <span asp-validation-for="LimiteCredito" class="text-danger"></span>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="AssignStep1" class="btn btn-secondary">Volver atrás</a>
                <button type="submit" class="btn btn-primary">Asignar tarjeta</button>
            </div>
        </form>
    </div>
</section>
