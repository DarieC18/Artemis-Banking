@{
    ViewData["Title"] = "Cancelar Tarjeta de Crédito";
    var ultimos4Digitos = ViewBag.Ultimos4Digitos as string;
    var id = (int)ViewBag.Id;
}

<div class="ab-page-header">
    <h1 class="ab-page-title">
        <i class="fas fa-ban me-2"></i>
        Cancelar Tarjeta de Crédito
    </h1>
    <p class="ab-page-subtitle">
        Confirma la cancelación de la tarjeta
    </p>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="ab-alert ab-alert-danger" data-auto-dismiss="5000">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
    </div>
}

<div class="ab-card">
    <div class="ab-card-body">
        <div class="text-center mb-4">
            <div style="display: inline-block; padding: 2rem 3rem; background: linear-gradient(135deg, #1B3B6F 0%, #2A5490 100%); border-radius: var(--ab-border-radius-lg); box-shadow: var(--ab-shadow-xl);">
                <i class="fas fa-credit-card" style="font-size: 4rem; color: #F4B400;"></i>
                <div class="mt-3" style="font-family: 'Courier New', monospace; font-size: 1.5rem; letter-spacing: 2px; color: white;">
                    **** **** **** @ultimos4Digitos
                </div>
            </div>
        </div>

        <div class="text-center mb-4">
            <h3 class="text-white mb-3">
                <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                ¿Está seguro que desea cancelar esta tarjeta?
            </h3>
            <p class="text-white-50">
                Esta acción no se puede deshacer. La tarjeta con terminación <strong>@ultimos4Digitos</strong> quedará inactiva de forma permanente.
            </p>
        </div>

        <form method="post" asp-action="Cancel" asp-route-id="@id">
            @Html.AntiForgeryToken()

            <div class="d-flex gap-3 justify-content-center mt-4">
                <a asp-action="Index" class="ab-btn ab-btn-outline-primary">
                    <i class="fas fa-times me-2"></i>
                    Cancelar Acción
                </a>
                <button type="submit" class="ab-btn ab-btn-danger">
                    <i class="fas fa-check me-2"></i>
                    Aceptar
                </button>
            </div>
        </form>
    </div>
</div>

<div class="ab-alert ab-alert-warning mt-4">
    <i class="fas fa-exclamation-triangle me-2"></i>
    <strong>Importante:</strong> Una vez cancelada la tarjeta:
    <ul class="mb-0 mt-2">
        <li>No se podrá realizar ningún consumo o pago con esta tarjeta</li>
        <li>La tarjeta desaparecerá del listado de productos del cliente</li>
        <li>Esta acción es permanente y no se puede revertir</li>
    </ul>
</div>