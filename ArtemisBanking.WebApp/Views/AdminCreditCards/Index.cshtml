@model List<ArtemisBanking.Application.ViewModels.CreditCardListItemViewModel>
@{
    ViewData["Title"] = "Gestión de Tarjetas de Crédito";
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var estadoFilter = ViewBag.EstadoFilter as string ?? "ACTIVA";
    var cedulaFilter = ViewBag.CedulaFilter as string;
}

<div class="ab-page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="ab-page-title mb-2">
                <i class="fas fa-credit-card me-2"></i>
                Gestión de Tarjetas de Crédito
            </h1>
            <p class="ab-page-subtitle mb-0">
                Administra las tarjetas de crédito del sistema
            </p>
        </div>
        <a asp-action="AssignStep1" class="ab-btn ab-btn-primary">
            <i class="fas fa-plus-circle me-2"></i>
            Asignar Tarjeta
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="ab-alert ab-alert-success" data-auto-dismiss="5000">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="ab-alert ab-alert-danger" data-auto-dismiss="5000">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
    </div>
}

<div class="ab-filter-bar">
    <form method="get" asp-action="Index" class="d-flex gap-3 w-100 flex-wrap align-items-end">
        <div class="ab-filter-group flex-fill">
            <label for="cedulaFilter" class="ab-form-label">
                <i class="fas fa-id-card me-1"></i>
                Buscar por Cédula
            </label>
            <input type="text" name="cedulaFilter" id="cedulaFilter" class="ab-form-control"
                   value="@cedulaFilter" placeholder="000-0000000-0"
                   style="font-family: 'Courier New', monospace;" />
        </div>
        <div class="ab-filter-group flex-fill">
            <label for="estadoFilter" class="ab-form-label">
                <i class="fas fa-filter me-1"></i>
                Estado
            </label>
            <select name="estadoFilter" id="estadoFilter" class="ab-form-control">
                <option value="ACTIVA" selected="@(estadoFilter == "ACTIVA")">Activas</option>
                <option value="CANCELADA" selected="@(estadoFilter == "CANCELADA")">Canceladas</option>
            </select>
        </div>
        <div>
            <button type="submit" class="ab-btn ab-btn-secondary">
                <i class="fas fa-search me-2"></i>
                Buscar
            </button>
        </div>
        @if (!string.IsNullOrEmpty(cedulaFilter))
        {
            <div>
                <a asp-action="Index" asp-route-estadoFilter="@estadoFilter" class="ab-btn ab-btn-outline-primary">
                    <i class="fas fa-times me-2"></i>
                    Limpiar
                </a>
            </div>
        }
    </form>
</div>

<div class="ab-card">
    <div class="ab-card-header">
        <h2 class="ab-card-title">
            <i class="fas fa-list me-2"></i>
            Lista de Tarjetas
        </h2>
    </div>

    <div class="ab-card-body">
        <div class="table-responsive">
            <table class="ab-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-credit-card me-1"></i> Número</th>
                        <th><i class="fas fa-user me-1"></i> Cliente</th>
                        <th class="text-end"><i class="fas fa-chart-line me-1"></i> Límite</th>
                        <th><i class="fas fa-calendar me-1"></i> Expiración</th>
                        <th class="text-end"><i class="fas fa-exclamation-triangle me-1"></i> Deuda</th>
                        <th class="text-center"><i class="fas fa-cog me-1"></i> Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var card in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="fas fa-credit-card" style="color: #F4B400;"></i>
                                        <span style="font-family: 'Courier New', monospace; font-weight: 500;">
                                            @card.NumeroTarjeta
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center"
                                             style="width: 35px; height: 35px; background: linear-gradient(135deg, #1B3B6F 0%, #2A5490 100%); color: white; font-weight: bold; flex-shrink: 0;">
                                            @card.ClienteNombre?.Substring(0, 1).ToUpper()
                                        </div>
                                        <span class="fw-medium">@card.ClienteNombre @card.ClienteApellido</span>
                                    </div>
                                </td>
                                <td class="text-end fw-bold text-success">
                                    @card.LimiteCredito.ToString("C")
                                </td>
                                <td>
                                    <i class="fas fa-calendar-alt text-white-50 me-1"></i>
                                    <span style="font-family: 'Courier New', monospace;">@card.FechaExpiracion</span>
                                </td>
                                <td class="text-end fw-bold @(card.DeudaActual > 0 ? "text-danger" : "text-white-50")">
                                    @card.DeudaActual.ToString("C")
                                </td>
                                <td>
                                    <div class="ab-table-actions justify-content-center">
                                        <a asp-action="Detail" asp-route-id="@card.Id"
                                           class="ab-table-icon-btn"
                                           style="background-color: rgba(0, 191, 165, 0.1); color: #00BFA5;"
                                           title="Ver detalle">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@card.Id"
                                           class="ab-table-icon-btn"
                                           title="Editar tarjeta">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (card.Estado == "ACTIVA")
                                        {
                                            <a asp-action="Cancel" asp-route-id="@card.Id"
                                               class="ab-table-icon-btn"
                                               style="background-color: rgba(220, 53, 69, 0.1); color: #DC3545;"
                                               title="Cancelar tarjeta">
                                                <i class="fas fa-ban"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">
                                <div class="ab-empty-state">
                                    <div class="ab-empty-state-icon">
                                        <i class="fas fa-credit-card"></i>
                                    </div>
                                    <h3 class="ab-empty-state-title">No hay tarjetas</h3>
                                    <p class="ab-empty-state-text">
                                        No se encontraron tarjetas de crédito con los filtros aplicados.
                                    </p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <div class="ab-pagination">
                @if (currentPage > 1)
                {
                    <a class="ab-pagination-btn" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-estadoFilter="@estadoFilter" asp-route-cedulaFilter="@cedulaFilter">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                }
                else
                {
                    <button class="ab-pagination-btn" disabled>
                        <i class="fas fa-chevron-left"></i>
                    </button>
                }

                @for (int i = 1; i <= totalPages; i++)
                {
                    if (i == currentPage)
                    {
                        <button class="ab-pagination-btn active">@i</button>
                    }
                    else
                    {
                        <a class="ab-pagination-btn" asp-action="Index" asp-route-page="@i" asp-route-estadoFilter="@estadoFilter" asp-route-cedulaFilter="@cedulaFilter">@i</a>
                    }
                }

                @if (currentPage < totalPages)
                {
                    <a class="ab-pagination-btn" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-estadoFilter="@estadoFilter" asp-route-cedulaFilter="@cedulaFilter">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                }
                else
                {
                    <button class="ab-pagination-btn" disabled>
                        <i class="fas fa-chevron-right"></i>
                    </button>
                }
            </div>
        }
    </div>
</div>