@model List<ArtemisBanking.Application.ViewModels.CreditCardListItemViewModel>
@{
    ViewData["Title"] = "Gestión de Tarjetas de Crédito";
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var estadoFilter = ViewBag.EstadoFilter as string ?? "ACTIVA";
    var cedulaFilter = ViewBag.CedulaFilter as string;
}

<section class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="display-5 fw-semibold text-primary">Gestión de Tarjetas de Crédito</h1>
        <a asp-action="AssignStep1" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Asignar tarjeta de crédito
        </a>
    </div>
</section>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<section class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="cedulaFilter" class="form-label">Buscar por cédula:</label>
                <input type="text" name="cedulaFilter" id="cedulaFilter" class="form-control" value="@cedulaFilter" placeholder="Ingrese cédula" />
            </div>
            <div class="col-md-3">
                <label for="estadoFilter" class="form-label">Estado:</label>
                <select name="estadoFilter" id="estadoFilter" class="form-select">
                    <option value="ACTIVA" selected="@(estadoFilter == "ACTIVA")">Activas</option>
                    <option value="CANCELADA" selected="@(estadoFilter == "CANCELADA")">Canceladas</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100">Buscar</button>
            </div>
            @if (!string.IsNullOrEmpty(cedulaFilter))
            {
                <div class="col-md-2">
                    <a asp-action="Index" asp-route-estadoFilter="@estadoFilter" class="btn btn-outline-secondary w-100">Limpiar</a>
                </div>
            }
        </form>
    </div>
</section>

<section class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Número Tarjeta</th>
                        <th>Cliente</th>
                        <th>Límite Crédito</th>
                        <th>Fecha Expiración</th>
                        <th>Deuda Actual</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var card in Model)
                        {
                            <tr>
                                <td>@card.NumeroTarjeta</td>
                                <td>@card.ClienteNombre @card.ClienteApellido</td>
                                <td>RD$ @card.LimiteCredito.ToString("N2")</td>
                                <td>@card.FechaExpiracion</td>
                                <td>RD$ @card.DeudaActual.ToString("N2")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detail" asp-route-id="@card.Id" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> Ver
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@card.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        @if (card.Estado == "ACTIVA")
                                        {
                                            <a asp-action="Cancel" asp-route-id="@card.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-x-circle"></i> Cancelar
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No se encontraron tarjetas de crédito.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <nav aria-label="Navegación de páginas">
                <ul class="pagination justify-content-center">
                    @if (currentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-estadoFilter="@estadoFilter" asp-route-cedulaFilter="@cedulaFilter">Anterior</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Anterior</span>
                        </li>
                    }

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        if (i == currentPage)
                        {
                            <li class="page-item active">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-estadoFilter="@estadoFilter" asp-route-cedulaFilter="@cedulaFilter">@i</a>
                            </li>
                        }
                    }

                    @if (currentPage < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-estadoFilter="@estadoFilter" asp-route-cedulaFilter="@cedulaFilter">Siguiente</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Siguiente</span>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</section>
