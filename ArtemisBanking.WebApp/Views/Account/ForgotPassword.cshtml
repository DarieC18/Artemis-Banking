@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "_AuthLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="ab-auth-container">
    <div class="ab-auth-card">
        <div class="ab-auth-header">
            <div class="ab-auth-logo">
                <img src="~/images/artemis-logo-icon.png" alt="Logo Artemis Banking" />
            </div>
            <h1 class="ab-auth-title">Recuperar Contraseña</h1>
            <p class="ab-auth-subtitle">Ingrese su nombre de usuario para recibir instrucciones</p>
        </div>

        <div class="ab-auth-body">
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="ab-alert ab-alert-success mb-4" data-auto-dismiss="8000">
                    <i class="fas fa-check-circle me-2"></i>
                    @ViewBag.SuccessMessage
                </div>
            }

            <div class="ab-alert ab-alert-info mb-4">
                <div class="d-flex align-items-start gap-2">
                    <i class="fas fa-info-circle" style="margin-top: 0.125rem;"></i>
                    <div>
                        <small>
                            Le enviaremos un enlace seguro a su correo electrónico registrado para restablecer su contraseña.
                        </small>
                    </div>
                </div>
            </div>

            <form asp-action="ForgotPassword" method="post" class="ab-auth-form">
                @Html.AntiForgeryToken()

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="ab-alert ab-alert-danger mb-4">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <div asp-validation-summary="ModelOnly"></div>
                    </div>
                }

                <div class="ab-form-group">
                    <label asp-for="UserName" class="ab-form-label">
                        <i class="fas fa-user me-1"></i>
                        Nombre de Usuario
                    </label>
                    <input asp-for="UserName"
                           class="ab-form-control"
                           placeholder="Ingrese su nombre de usuario"
                           autofocus />
                    <span asp-validation-for="UserName" class="ab-invalid-feedback"></span>
                </div>

                <button type="submit" class="ab-auth-btn ab-auth-btn-primary mt-4">
                    <i class="fas fa-paper-plane me-2"></i>
                    Enviar Instrucciones
                </button>

                <div class="ab-auth-links">
                    <a asp-action="Login" class="ab-auth-link">
                        <i class="fas fa-arrow-left"></i>
                        Volver al inicio de sesión
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/auth.js" asp-append-version="true"></script>
}