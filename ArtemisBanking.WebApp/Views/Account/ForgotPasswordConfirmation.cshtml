@{
    ViewData["Title"] = "Solicitud enviada";
    Layout = "_AuthLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="ab-auth-container">
    <div class="ab-auth-card" style="max-width: 550px;">
        <div class="ab-auth-header">
            <div class="ab-auth-logo">
                <img src="~/images/artemis-logo-icon.png" alt="Logo Artemis Banking" />
            </div>
            <h1 class="ab-auth-title">Revisa tu correo</h1>
            <p class="ab-auth-subtitle">Hemos enviado las instrucciones de recuperación</p>
        </div>

        <div class="ab-auth-body">
            <div class="ab-alert ab-alert-success mb-4">
                <div class="d-flex align-items-start gap-2">
                    <i class="fas fa-check-circle" style="margin-top: 0.125rem;"></i>
                    <div>
                        @(ViewBag.SuccessMessage ?? "Si el usuario proporcionado existe, hemos enviado instrucciones para restablecer tu contraseña.")
                    </div>
                </div>
            </div>

            <div class="ab-card mb-4" style="background-color: rgba(255, 255, 255, 0.03); border: 1px solid rgba(255, 255, 255, 0.1);">
                <div class="ab-card-body">
                    <h6 class="fw-semibold mb-3" style="color: var(--ab-white);">
                        <i class="fas fa-lightbulb me-2" style="color: #F4B400;"></i>
                        ¿Qué hacer ahora?
                    </h6>
                    <ol class="mb-0" style="padding-left: 1.25rem; color: rgba(255, 255, 255, 0.7);">
                        <li class="mb-2">Revisa tu bandeja de entrada</li>
                        <li class="mb-2">Busca un correo de Artemis Banking</li>
                        <li class="mb-2">Haz clic en el enlace de recuperación</li>
                        <li>Sigue las instrucciones para crear una nueva contraseña</li>
                    </ol>
                </div>
            </div>

            <div class="ab-alert ab-alert-warning">
                <div class="d-flex align-items-start gap-2">
                    <i class="fas fa-exclamation-triangle" style="margin-top: 0.125rem;"></i>
                    <div>
                        <strong style="display: block; margin-bottom: 0.25rem;">¿No encuentras el correo?</strong>
                        <small>
                            Revisa tu carpeta de spam. El enlace expirará en 24 horas.
                        </small>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-column gap-3 mt-4">
                <a asp-action="Login" class="ab-btn ab-btn-primary">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Volver al inicio de sesión
                </a>
                <a asp-action="ForgotPassword" class="ab-btn ab-btn-outline-primary">
                    <i class="fas fa-redo me-2"></i>
                    Enviar nuevamente
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth.js" asp-append-version="true"></script>
}