@{
    ViewData["Title"] = "Acceso Denegado";
    Layout = "_Layout";
}

@{
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    var homeController = "Home";
    var homeAction = "Index";

    if (isAuthenticated)
    {
        if (User.IsInRole("Administrador"))
        {
            homeController = "Admin";
            homeAction = "Dashboard";
        }
        else if (User.IsInRole("Cajero"))
        {
            homeController = "Cajero";
            homeAction = "Home";
        }
        else if (User.IsInRole("Cliente"))
        {
            homeController = "Cliente";
            homeAction = "Home";
        }
        else if (User.IsInRole("Comercio"))
        {
            homeController = "Comercio";
            homeAction = "Home";
        }
    }
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Acceso Denegado</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-5x text-danger mb-3"></i>
                        <h3>No tiene permiso para acceder a este recurso</h3>
                        <p class="lead">Lo sentimos, pero no tiene los permisos necesarios para ver esta página.</p>
                    </div>
                    
                    <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                        <a asp-controller="@homeController" asp-action="@homeAction" class="btn btn-primary">
                            <i class="fas fa-home me-1"></i> Ir a mi inicio
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Volver Atrás
                        </a>
                    </div>

                    @if (isAuthenticated)
                    {
                        <div class="mt-4">
                            <p>Ha iniciado sesión como: <strong>@User.Identity.Name</strong></p>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link p-0">¿No es @User.Identity.Name? Cerrar sesión</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="mt-4">
                            <p class="mb-2">No tiene permiso para acceder a esta sección. Inicie sesión con una cuenta autorizada.</p>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-link">Ir al inicio de sesión</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
