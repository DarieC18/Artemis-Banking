@model List<ArtemisBanking.Application.Dtos.Beneficiary.BeneficiaryDTO>

@{
    ViewData["Title"] = "Beneficiarios";
}

<h2 class="mt-3">Beneficiarios</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Beneficiario</a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Número de Cuenta</th>
                <th>Nombre</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.NumeroCuentaBeneficiario</td>
                    <td>@b.NombreCompleto</td>
                    <td>
                        <form asp-action="Delete" method="post" asp-route-id="@b.Id">
                            <button class="btn btn-danger btn-sm"
                                    onclick="return confirm('¿Deseas eliminar este beneficiario?');">
                                Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tienes beneficiarios registrados.</p>
}
